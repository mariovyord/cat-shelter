<form action="/edit-cat/{{cat._id}}" method="POST" class="cat-form">
	<h2>Add Cat</h2>
	<label for=" name">Name</label>
	<input name="name" type="text" id="name" value="{{cat.name}}">
	<label for="description">Description</label>
	<textarea name="description" id="description">{{cat.description}}</textarea>
	<label for="imageUrl">Image URL</label>
	<input name="imageUrl" type="text" id="imageUrl" value="{{cat.imageUrl}}">
	<label for="group">Breed</label>
	<select name="breed" id="group">
		{{#each breeds}}
		{{#if (compare this cat.breed)}}
		<option value="{{this}}" selected>{{this}}</option>
		{{else}}
		<option value="{{this}}">{{this}}</option>
		{{/if}}
		{{/each}}
	</select>
	<button type="submit">Edit Cat</button>
</form>